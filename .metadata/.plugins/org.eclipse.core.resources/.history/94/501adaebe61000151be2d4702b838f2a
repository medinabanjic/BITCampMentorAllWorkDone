package ba.bitcamp.exercises.datastructures;

public class Main {

	public static boolean isSameArtist(Song s1, Song s2) {

		boolean isSame = false;
		if (s1.artist.name.equals(s2.artist.name)) {

			isSame = true;
		}

		return isSame;
	}

	public static boolean isFromSoloArtist(Song s1) {

		boolean isSolo = s1.artist.isBand;

		if (isSolo = true) {
			isSolo = false;
		} else {
			isSolo = true;
		}

		return isSolo;
	}

	public static Song getOlderSong(Song s1, Song s2) {
		System.out.println("The older song is");
		return (s1.year > s2.year) ? s2 : s1;
	}

	public static void main(String[] args) {

		Artist a1 = new Artist("Sade", false, 1975, "Soul");
		Artist a2 = new Artist("Michael Jackson", false, 1971, "Pop");
		Artist a3 = new Artist("The Kelly Family", true, 1980, "Pop");

		Song s1 = new Song(a1, "Smooth operator", 1984, "Soul");
		Song s2 = new Song(a2, "Earth song", 1995, "Pop");
		Song s3 = new Song(a2, "Black And White", 1991, "New jack swing - Rock");
		Song s4 = new Song(a3, "An Angel", 1994, "Pop");

		
		
		
		if (isSameArtist(s2, s3) == true) {

			System.out.println("The artist of these two songs is the same.");
		} else {

			System.out.println("The artists fot these songs are different");
		}

		
		
		
		if (isFromSoloArtist(s1) == true) {

			System.out.println("This is a song of a solo artist.");
		} else {

			System.out.println("This is a band song.");
		}
		
		
		
		System.out.println((getOlderSong(s4, s1)));
		

	}

}
