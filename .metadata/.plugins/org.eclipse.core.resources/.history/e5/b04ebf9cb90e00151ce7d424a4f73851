package ba.bitcamp.dreamteam;

import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;
import java.awt.image.BufferedImage;

public class Medina {

	public static void main(String[] args) {
		DrawWindow w = new DrawWindow();
		draw(w);
	}

	public static void draw(DrawWindow w) {
		BufferedImage img = new BufferedImage(1200, 800,
				BufferedImage.TYPE_INT_ARGB);
		Graphics g = img.getGraphics();
		g.setColor(Color.LIGHT_GRAY);

		g.fillRect(0, 0, 200, 200);

		g.setColor(Color.ORANGE);
		g.fillOval(10, 10, 100, 100);

		g.setColor(Color.LIGHT_GRAY);
		g.fillOval(20, 10, 100, 100);

		g.setColor(new Color(60, 10, 70));
		g.fillOval(25, 10, 100, 100);

		g.setColor(Color.BLACK);
		g.drawOval(25, 10, 100, 100);
		g.drawOval(24, 10, 100, 100);

		g.setColor(Color.WHITE);
		g.drawLine(25, 60, 125, 60);
		g.drawLine(25, 61, 125, 61);
		g.drawLine(25, 62, 125, 62);
		g.drawLine(25, 58, 125, 58);
		g.drawLine(25, 59, 125, 59);

		g.drawLine(25, 53, 125, 53);
		g.drawLine(25, 52, 125, 52);
		g.drawLine(25, 51, 125, 51);
		g.drawLine(25, 50, 125, 50);
		g.drawLine(25, 49, 125, 49);

		g.drawLine(25, 67, 125, 67);
		g.drawLine(25, 68, 125, 68);
		g.drawLine(25, 69, 125, 69);
		g.drawLine(25, 70, 125, 70);
		g.drawLine(25, 71, 125, 71);

		

		
		TextIO.readStandardInput();

		w.setImage(img);
	}

}
