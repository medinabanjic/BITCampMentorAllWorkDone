package ba.bitcamp.S04D01;

import java.util.Arrays;
import java.util.Scanner;

public class MultipleArrays {

	// public static void print1DArray(int[] array){
	//
	// for (int i = 0; i< array.length; i++){
	//
	//
	// System.out.println(array[i] + " ");
	// }
	//
	// }

	public static int[][] print2DArray(int[][] array) {
		Scanner in = new Scanner(System.in);
		
		for (int i = 0; i < array.length; i++) {
			for (int j = 0; j < array[i].length; j++) {
				
				System.out.printf("Which number do you want to input in [%d] [%d]: ", i , j);
				int x = in.nextInt();
				array[i][j] = x;
				//System.out.print(array[i][j] + "\t");

			}

			//System.out.println();
		}
		
		return array;
	}

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		System.out.println("Please input n for rows, and m for columns of the table: ");
		
		int n = in.nextInt();
		int m = in.nextInt();
		
		
		int[][] matrix = new int[n][m];
		
		System.out.print(Arrays.toString(print2DArray(matrix)));
	}
}
