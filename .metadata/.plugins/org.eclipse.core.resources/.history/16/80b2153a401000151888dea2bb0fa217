package ba.bitcamp.arrays;

public class Final {

	public static String[] makeFileName() {

		TextIO.readFile("src/ba/bitcamp/arrays/1dArray");

		int counter = 0;

		while (!TextIO.eof()) {
			TextIO.getln();
			counter++;
		}

		TextIO.readStandardInput();

		TextIO.readFile("ba/bitcamp/arrays/names.in");

		String[] studentFile = new String[counter];

		for (int i = 0; i < counter; i++) {
			String line = TextIO.getln();
			int length = line.length();

			String name = line.substring(0, length - 2);
			String rest = line.substring(length - 1);
			String filename = name + rest;

			studentFile[i] = filename;
		}

		return studentFile;
	}

	public static void main(String[] args) {

		System.out.println(makeFileName());
		
	}

}
