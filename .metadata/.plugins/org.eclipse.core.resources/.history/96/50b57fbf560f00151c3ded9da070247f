package ba.bitcamp.S04D01;

import java.util.Scanner;

public class MatrixHelp {

	public static void printColumn(int [][] array, int index){
		int column = 0;
		for (int i = 0; i < array.length; i++) {
			for (int j = index; j < array[i].length; j+= array.length) {
			
				array[i][j] = column;
				System.out.println(column);

			}
		}
		
	}
	
	public static void print2DArray(int[][] array){
		
		for (int[] row : array){
			for(int el : row){
				System.out.printf("%2d", el);
			}
			System.out.println();
		}
	}
	
	
	public static void getInput(int[][] array) {

		Scanner in = new Scanner(System.in);

		for (int i = 0; i < array.length; i++) {
			for (int j = 0; j < array[i].length; j++) {
				System.out.printf(
						"Which number do you want to input in [%d] [%d]: \n",
						i, j);
				int x = in.nextInt();
				array[i][j] = x;

			}
		}
	}
}
